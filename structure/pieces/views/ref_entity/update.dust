{>"layout_custom_module"/}

{<header}
	<div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1 class="m-0">
                    {#__ key="module.custom_module"/}&nbsp;
                    <small>
                        {#__ key="module.module"/}
                    </small>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                	<li class="breadcrumb-item">
                        <a href="/module/home">
                            <i class="fa fa-home"></i>&nbsp;&nbsp;
                            {#__ key="module.home"/}
                        </a>
                    </li>
                    <!-- SUB MODULE - DO NOT REMOVE -->
                    <li class="breadcrumb-item active">
                        {#__ key="entity.custom_entity.label_entity"/}
                    </li>
                </ol>
            </div>
        </div>
    </div>
{/header}

{<content}
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<form action="/custom_url_entity/update" method="post">
					<div class="card">
						<div class="card-header">
							<h3 class="card-title">
								{#__ key="operation.update"/}&nbsp;
								{#__ key="entity.custom_entity.label_entity"/}
							</h3>
							<div class="card-tools">
								<button type="button" class="btn btn-tool" data-card-widget="collapse" title="collapse">
								<i class="fas fa-minus"></i>
								</button>
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label id="label_id" for="id">
									{#__ key="entity.custom_entity.id_entity"/} {#__ key="entity.custom_entity.label_entity"/}
								</label>
								<input aria-labelledby="label_id" name="id" type="hidden" value="{custom_entity.id}">
								<label id="label_id_display" for="id_display"><span style="display: none;">{#__ key="entity.custom_entity.id_entity"/}</span></label>
								<input aria-labelledby="label_id_display" name="id_display" type="text" placeholder="{custom_entity.id_entity}" value="{custom_entity.id}" disabled="" class="form-control input"/>
							</div>
							{#custom_entity}
								{>"custom_entity/update_fields"/}
							{/custom_entity}
							<div class="form-group">
								<input name="version" value="1" type="hidden" />
							</div>
						</div>
						<div class="card-footer">
							<a class="btn btn-default" href="javascript:history.back();">
								{#__ key="button.cancel"/}
							</a>
							&nbsp;&nbsp;
							{#actionAccess entity="custom_url_entity" action="update"}
								<button type="submit" class="btn btn-primary">
									<i class="fas fa-save">&nbsp;&nbsp;</i>
									{#__ key="button.save"/}
								</button>
							{/actionAccess}
						</div>
					</div>

					{#associationFlag}
						<input type="hidden" name='associationFlag' value="{.}">
					{/associationFlag}
					{#associationSource}
						<input type="hidden" name='associationSource' value="{.}">
					{/associationSource}
					{#associationForeignKey}
						<input type="hidden" name='associationForeignKey' value="{.}">
					{/associationForeignKey}
					{#associationAlias}
						<input type="hidden" name='associationAlias' value="{.}">
					{/associationAlias}
					{#associationUrl}
						<input type="hidden" name='associationUrl' value="{.}">
					{/associationUrl}
				</form>
			</div>
		</div>
	</div>
{/content}

{<custom_js}
	<script type="text/javascript">
		$(function() {
			NodeaForms();
		});
	</script>
{/custom_js}